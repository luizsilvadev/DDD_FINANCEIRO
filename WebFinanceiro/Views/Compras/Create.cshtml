

@model Entities.Entidades.Compra

<div class="card">
    <div class="card-header card-header-primary">
        <h4 class="card-title ">Cadastro de Compra</h4>
        @*<p class="card-category"> Aqui estão suas categorias</p>*@
        <p class="card-category">
            <i class="material-icons">class</i>
            Cadastro de Compra
        </p>

    </div>

    <div class="card-body">
        <form asp-action="Create">
            <input asp-for="Id" type="hidden" />


            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="Nome" class="control-label"></label>
                        <input asp-for="Nome" class="form-control" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="IdCategoria" class="control-label"></label>
                        <select asp-for="IdCategoria" class="form-control" asp-items="ViewBag.IdCategoria"></select>
                        <span asp-validation-for="IdCategoria" class="text-danger"></span>
                    </div>
                </div>

            </div>


            @if (Model.Id > 0)
            {
                <div class="row">

                    <div class="col-md-4">
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="DataCadastro" class="control-label"></label>
                            <input asp-for="DataCadastro" type="datetime-local" class="form-control" readonly />
                            @*<span asp-validation-for="DataCadastro" class="text-danger"></span>*@
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="DataAlteracao" class="control-label"></label>
                            <input asp-for="DataAlteracao" type="datetime-local" class="form-control" readonly />
                            @*<span asp-validation-for="DataAlteracao" class="text-danger"></span>*@
                        </div>
                    </div>
                </div>
            }


            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>

            <div>

                <a asp-action="Index">Voltar para Lista</a>
            </div>
        </form>
    </div>

</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script src="~/js/compra.js"></script>