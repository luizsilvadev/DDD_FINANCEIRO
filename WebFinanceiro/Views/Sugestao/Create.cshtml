

@model Entities.Entidades.Sugestao

<div class="card">
    <div class="card-header card-header-primary">
        <h4 class="card-title ">Cadastro da Sugestão</h4>
        @*<p class="card-category"> Aqui estão suas categorias</p>*@
        <p class="card-category">
            <i class="material-icons">class</i>
            Cadastro da Sugestão
        </p>

    </div>

    <div class="card-body">
        <form asp-action="Create">
            <input asp-for="Id" type="hidden" />
            @*<div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="bmd-label-floating">    @Html.DisplayNameFor(model => model.Id) : </label>
                            @Html.DisplayFor(model => model.Id, new { @class = "form-control" })
                        </div>
                    </div>
                </div>*@

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="bmd-label-floating" asp-for="Nome"></label>
                        <input asp-for="Nome" class="form-control" maxlength="50" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Sistema</label>
                        <textarea asp-for="DescricaoSugestao" style="min-height:100px" class="form-control" maxlength="5000">
</textarea>
                        <span asp-validation-for="DescricaoSugestao" class="text-danger"></span>
                    </div>
                    <input type="hidden" asp-for="Id" />
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>

            <div>

                <a asp-area="" asp-controller="Home" asp-action="Index">
                    Sair
                </a>
            </div>
        </form>
    </div>

</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script src="~/js/sugestao.js"></script>