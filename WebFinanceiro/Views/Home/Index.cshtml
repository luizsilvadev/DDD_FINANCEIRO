@{
    ViewData["Title"] = " ";
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-4 col-md-6 col-sm-6">
                <div class="card card-stats">
                    <div class="card-header card-header-info card-header-icon">
                        <div class="card-icon">
                            <i class="material-icons">content_copy</i>
                        </div>
                        <p class="card-category">Investimentos</p>
                        <h3 class="card-title">R$ <span id="Investimento"></span></h3>
                    </div>
                    <div class="card-footer">
                        <div class="stats">
                            <i class="material-icons">date_range</i>
                            <a href="#">...</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 col-sm-6">
                <div class="card card-stats">
                    <div class="card-header card-header-success card-header-icon">
                        <div class="card-icon">
                            <i class="material-icons">store</i>
                        </div>
                        <p class="card-category">Despesas Pagas</p>
                        <h3 class="card-title">R$ <span id="Despesa_Paga"></span></h3>
                    </div>
                    <div class="card-footer">
                        <div class="stats">
                            <i class="material-icons">date_range</i>
                            <a  asp-area="" asp-controller="Despesas" asp-action="Index">
                                Acessar Mês @DateTime.Now.Month
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 col-sm-6">
                <div class="card card-stats">
                    <div class="card-header card-header-warning card-header-icon">
                        <div class="card-icon">
                            <i class="fa fa-warning"></i>
                        </div>
                        <p class="card-category">Despesas a Pagar</p>
                        <h3 class="card-title">R$ <span id="Despesa_Pendente"></span></h3>
                    </div>
                    <div class="card-footer">
                        <div class="stats">
                            <i class="material-icons">date_range</i>
                            <a asp-area="" asp-controller="Despesas" asp-action="Index">
                                Acessar Mês @DateTime.Now.Month
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 col-sm-6">
                <div class="card card-stats">
                    <div class="card-header card-header-danger card-header-icon">
                        <div class="card-icon">
                            <i class="fa fa-money"></i>
                        </div>

                        <p class="card-category">Despesas atrasadas</p>
                        <h3 class="card-title">R$ <span id="Despesa_atrasadas"></span></h3>
                    </div>
                    <div class="card-footer">
                        <div class="stats">
                            <i class="material-icons">date_range</i>
                            <a asp-area="" asp-controller="Despesas" asp-action="DespesasAtrasadas">
                                Verificar Despesas atrasadas
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.js"></script>

<script src="~/js/graficos.js"></script>

<script>
    window.addEventListener('load', function () {

        $('#Dashboard').addClass('active');
        $('#Categorias').removeClass('active');
        $('#Despesas').removeClass('active');

    });

</script>