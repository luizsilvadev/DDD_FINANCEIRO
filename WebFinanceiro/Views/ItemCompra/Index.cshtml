@model IEnumerable<Entities.Entidades.ItemCompra>
@*@{
        ViewData["Title"] = "Index";
    }*@


<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary">
                        <h4 class="card-title ">Compras</h4>
                        @*<p class="card-category"> Aqui estão suas Compras</p>*@
                        <p class="card-category">
                            <i class="material-icons">class</i>
                            <a asp-action="Create">Criar uma nova Compra</a>
                        </p>

                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table">
                                <thead class=" text-primary">
                                    <tr>

                                        <th></th>


                                        <th>
                                            @Html.DisplayNameFor(model => model.Comprado)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Nome)
                                        </th>

                                        <th>Ações</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                    <tr>
                                        <td>
                                            @{
                                                var nomeCampoConfirmacao = "confirmacao_" + item.Id;
                                            }

                                            <div id="@nomeCampoConfirmacao" class="salvou"></div>
                                        </td>


                                        @*<td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>*@
                                        <td>

                                            <label class="MeuInput">
                                                @{
                                                    var nomeCampo = "comprado_" + item.Id;
                                                }

                                                @if (item.Comprado)
                                                {
                                                    <input id="@nomeCampo" type="checkbox" checked onclick="objetoCompra.AlteraCompra(@item.Id)" />
                                                }
                                                else
                                                {
                                                    <input type="checkbox" id="@nomeCampo" onclick="objetoCompra.AlteraCompra(@item.Id)" />
                                                }
                                                <span class="slider round"></span>
                                            </label>

                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Nome)
                                        </td>

                                        <td>
                                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                            @Html.ActionLink("Details", "Details", new { id = item.Id })
                                            |@Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                        </td>


                                    </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>


<script src="~/js/itemCompra.js"></script>