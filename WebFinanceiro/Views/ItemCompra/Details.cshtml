@model Entities.Entidades.ItemCompra



<div class="card">
    <div class="card-header card-header-primary">
        <h4 class="card-title ">Detalhes da Categoria</h4>
        @*<p class="card-category"> Aqui estão suas categorias</p>*@
        <p class="card-category">
            <i class="material-icons">class</i>
            Visualização dos detelhes da Categoria
        </p>

    </div>

    <div class="card-body">
        <form>


            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="bmd-label-floating">    @Html.DisplayNameFor(model => model.Id) : </label>
                        @Html.DisplayFor(model => model.Id, new { @class = "form-control" })
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="bmd-label-floating">@Html.DisplayNameFor(model => model.Nome) : </label>
                        @Html.DisplayFor(model => model.Nome, new { @class = "form-control" })
                    </div>
                </div>
            </div>

            @*<div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="bmd-label-floating">@Html.DisplayNameFor(model => model.Valor) : </label>
                        @Html.DisplayFor(model => model.Valor, new { @class = "form-control" })
                    </div>
                </div>
            </div>*@


            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="bmd-label-floating">@Html.DisplayNameFor(model => model.DataAlteracao) : </label>
                        @Html.DisplayFor(model => model.DataAlteracao, new { @class = "form-control" })
                    </div>
                </div>

            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="bmd-label-floating">@Html.DisplayNameFor(model => model.DataCadastro) : </label>
                        @Html.DisplayFor(model => model.DataCadastro, new { @class = "form-control" })
                    </div>
                </div>
            </div>

            <div class="row">

                <div class="col-md-6">
                    <div class="form-group">
                        <label class="bmd-label-floating">@Html.DisplayNameFor(model => model.Comprado) : </label>
                        <div class="col-md-2">
                            <label class="MeuInput">
                                @if (Model.Comprado)
                                {
                                    <input type="checkbox" asp-for="Comprado" checked disabled />
                                }
                                else
                                {
                                    <input type="checkbox" asp-for="Comprado" disabled />
                                }
                                <span class="slider round"></span>
                            </label>
                        </div>
                    </div>
                </div>
            </div>




            <div>
                @Html.ActionLink("Editar", "Edit", new { id = Model.Id }) /
                <a asp-action="Index">Voltar para Lista</a>
            </div>
        </form>
    </div>

</div>


<script src="~/js/itemCompra.js"></script>
