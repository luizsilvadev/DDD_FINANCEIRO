@model Entities.Entidades.Despesa


<div class="card">
    <div class="card-header card-header-primary">
        <h4 class="card-title ">Edição da Despesa</h4>
        @*<p class="card-category"> Aqui estão suas categorias</p>*@
        <p class="card-category">
            <i class="material-icons">class</i>
            Edição da Despesa
        </p>

    </div>

    <div class="card-body">
        <form asp-action="Edit">
            <input asp-for="Mes" type="hidden" />
            <input asp-for="Ano" type="hidden" />
            <div class="row">

                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="Nome" class="control-label"></label>
                        <input asp-for="Nome" class="form-control" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="Valor" class="control-label"></label>
                        <input asp-for="Valor" class="form-control" />
                        <span asp-validation-for="Valor" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="DataVencimento" class="control-label"></label>
                        <input asp-for="DataVencimento" type="datetime-local" class="form-control" />
                        @*<span asp-validation-for="DataVencimento" class="text-danger"></span>*@
                    </div>
                </div>
                @*<div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="Ano" class="control-label"></label>
                            <input asp-for="Ano" class="form-control" />
                            <span asp-validation-for="Ano" class="text-danger"></span>
                        </div>
                    </div>*@
            </div>

            <div class="row">

                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="DataPagamento" class="control-label"></label>
                        <input asp-for="DataPagamento" type="date" class="form-control" />
                        @*<span asp-validation-for="DataPagamento" class="text-danger"></span>*@
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="DataCadastro" class="control-label"></label>
                        <input asp-for="DataCadastro" type="datetime-local" class="form-control" readonly />
                        @*<span asp-validation-for="DataCadastro" class="text-danger"></span>*@
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="DataAlteracao" class="control-label"></label>
                        <input asp-for="DataAlteracao" type="datetime-local" class="form-control" readonly />
                        @*<span asp-validation-for="DataAlteracao" class="text-danger"></span>*@
                    </div>
                </div>
            </div>


            <div class="row">


                <div class="col-md-4">

                    <div class="form-check">
                        <label class="form-check-label">
                            <label class="bmd-label-floating">    @Html.DisplayNameFor(model => model.Pago)? </label>
                            @*<input class="form-check-input" asp-for="Pago" type="checkbox">
                                <span class="form-check-sign">
                                    <span class="check"></span>
                                </span>*@



                        </label>

                        <div class="col-md-2">
                            <label class="MeuInput">
                                @if (Model.Pago)
                                {
                                    <input type="checkbox" asp-for="Pago" checked />
                                }
                                else
                                {
                                    <input type="checkbox" asp-for="Pago" />
                                }
                                <span class="slider round"></span>
                            </label>
                        </div>
                    </div>

                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="IdCategoria" class="control-label"></label>
                        <select asp-for="IdCategoria" class="form-control" asp-items="ViewBag.IdCategoria"></select>
                        <span asp-validation-for="IdCategoria" class="text-danger"></span>
                    </div>
                    <input type="hidden" asp-for="Id" />
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        <label class="control-label">Sistema</label>
                        <select asp-for="TipoDespesa" class="form-control" asp-items="ViewBag.TipoDespesa"></select>
                        <span asp-validation-for="TipoDespesa" class="text-danger"></span>
                    </div>
                </div>

            </div>

            <div class="row">


                <div class="col-md-4">

                </div>
                <div class="col-md-4">

                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>

            <div>

                @if (Model.DespesaAntrasada)
                {
                    <a asp-area="" asp-controller="Despesas" asp-action="DespesasAtrasadas">
                        Voltar para Lista
                    </a>

                }
                else
                {
                    <a asp-action="Index">Voltar para Lista</a>
                }
            </div>
        </form>
    </div>

</div>



@*@section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }*@

<script src="~/lib/jquery/dist/jquery.js"></script>

<script src="~/js/despesa.js"></script>
